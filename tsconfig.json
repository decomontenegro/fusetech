{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@fuseapp/types": ["packages/types/src"],
      "@fuseapp/types/*": ["packages/types/src/*"],
      "@fuseapp/ui": ["packages/ui/src"],
      "@fuseapp/ui/*": ["packages/ui/src/*"],
      "@fuseapp/utils": ["packages/utils/src"],
      "@fuseapp/utils/*": ["packages/utils/src/*"],
      "@fuseapp/auth": ["packages/auth/src"],
      "@fuseapp/auth/*": ["packages/auth/src/*"],
      "@fuseapp/api": ["packages/api/src"],
      "@fuseapp/api/*": ["packages/api/src/*"],
      "@fuseapp/config": ["packages/config/src"],
      "@fuseapp/config/*": ["packages/config/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
} 