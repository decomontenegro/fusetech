# Staging Environment Variables
# This file contains staging-specific environment variables
# Copy this file and create your own .env.staging.local for local testing

# Application
NEXT_PUBLIC_APP_URL=https://staging.fusetech.app
NEXT_PUBLIC_ENVIRONMENT=staging
NODE_ENV=production

# API URLs
NEXT_PUBLIC_API_URL=https://staging-api.fusetech.app
NEXT_PUBLIC_WEBSOCKET_URL=wss://staging-api.fusetech.app

# Neon Database (Staging)
DATABASE_URL=postgresql://[user]:[password]@[host]/fusetech_staging?sslmode=require
DIRECT_URL=postgresql://[user]:[password]@[host]/fusetech_staging?sslmode=require

# Firebase (Staging Project)
NEXT_PUBLIC_FIREBASE_API_KEY=staging_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=fusetech-staging.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=fusetech-staging
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=fusetech-staging.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=staging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=staging_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-STAGING123

# Firebase Admin (Server-side)
FIREBASE_PROJECT_ID=fusetech-staging
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-staging@fusetech-staging.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSTAGING_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# Strava OAuth (Staging)
STRAVA_CLIENT_ID=staging_strava_client_id
STRAVA_CLIENT_SECRET=staging_strava_client_secret
STRAVA_REDIRECT_URI=https://staging.fusetech.app/api/auth/strava/callback
STRAVA_WEBHOOK_VERIFY_TOKEN=staging_webhook_verify_token

# Authentication
NEXTAUTH_URL=https://staging.fusetech.app
NEXTAUTH_SECRET=staging_nextauth_secret_key

# Social OAuth (Staging)
GOOGLE_CLIENT_ID=staging_google_client_id
GOOGLE_CLIENT_SECRET=staging_google_client_secret
APPLE_CLIENT_ID=staging_apple_client_id
APPLE_CLIENT_SECRET=staging_apple_client_secret

# Blockchain/Web3 (Testnet)
NEXT_PUBLIC_CHAIN_ID=80001
NEXT_PUBLIC_CHAIN_NAME=Mumbai
NEXT_PUBLIC_RPC_URL=https://rpc-mumbai.maticvigil.com/
NEXT_PUBLIC_FUSE_TOKEN_ADDRESS=0xStaging_Token_Address
PRIVATE_KEY=staging_deployer_private_key

# Analytics & Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-STAGING456
SENTRY_DSN=https://staging@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
REDIS_URL=redis://staging-redis.fusetech.app:6379

# Email (SendGrid)
SENDGRID_API_KEY=staging_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@staging.fusetech.app

# Push Notifications
VAPID_PUBLIC_KEY=staging_vapid_public_key
VAPID_PRIVATE_KEY=staging_vapid_private_key

# Storage
NEXT_PUBLIC_STORAGE_URL=https://staging-storage.fusetech.app

# Monitoring & Logging
LOG_LEVEL=debug
NEXT_PUBLIC_LOG_LEVEL=info