# FUSEtech Lite - Local Testing Environment
# Copy this to .env.local for local testing

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:8001
NEXTAUTH_URL=http://localhost:8001

# Database (SQLite for local testing)
DATABASE_URL=file:./dev.db

# Strava OAuth (Test/Development credentials)
# Get these from: https://www.strava.com/settings/api
STRAVA_CLIENT_ID=164887

STRAVA_CLIENT_SECRET=0b5b7d4c81f9aa7b92700514217c9ba647ab9c62



# Session Secret (generate a random string)
NEXTAUTH_SECRET=your_local_test_secret_key_here

# Development flags
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true
NEXT_PUBLIC_SKIP_AUTH_FOR_TESTING=false

# Local testing ports
NEXT_PUBLIC_API_PORT=8001
NEXT_PUBLIC_DB_PORT=8002
NEXT_PUBLIC_MOCK_PORT=8003

# Mock Strava API for testing (when no real credentials)
NEXT_PUBLIC_USE_MOCK_STRAVA=true
MOCK_STRAVA_API_URL=http://localhost:8003

# Feature flags for testing
NEXT_PUBLIC_ENABLE_LITE_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
